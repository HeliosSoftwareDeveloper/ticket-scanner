<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Title">
        <item name="android:textSize">@dimen/font_unit_8</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">@dimen/space_unit_1</item>
    </style>

    <style name="Title.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Title.Grey">
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="Title.Dark">
        <item name="android:textColor">@color/coal_black</item>
    </style>

    <style name="Heading">
        <item name="android:textSize">@dimen/font_unit_5</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">@dimen/space_unit_0_5</item>
    </style>

    <style name="Heading.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Heading.Dark">
        <item name="android:textColor">@color/coal_black</item>
    </style>

    <style name="Body">
        <item name="android:textSize">@dimen/font_unit_4</item>
        <item name="android:lineSpacingExtra">@dimen/space_unit_1</item>
    </style>

    <style name="Body.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Body.LightGrey">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Body.Grey">
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="Body.Dark">
        <item name="android:textColor">@color/coal_black</item>
    </style>

    <style name="Caption">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/font_unit_3</item>
        <item name="android:lineSpacingExtra">@dimen/space_unit_0_5</item>
    </style>

    <style name="Caption.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Caption.LightGrey">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Caption.Grey">
        <item name="android:textColor">@color/dark_gray</item>
    </style>
</resources>
